.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  align-items: center;
  justify-content: center;
}

.container .avatar {
  width: 269rpx;
  height: 269rpx;
  border: 16rpx solid #f6705a;
  border-radius: 50%;
  overflow: hidden;
}

.container .username {
  margin-top: 22rpx;
  color: #f6705a;
  font-size: 28rpx;
  border-bottom: 2rpx solid #f6705a;
  padding: 10rpx 34rpx;
}

.loginBtn::after {
  border: none;
}

.loginBtn {
  margin-top: 58rpx;
  width: 360rpx;
  background-color: transparent;
  border-radius: 15rpx;
  font-size: 26rpx;
  letter-spacing: 0.8px;
  border: none;
  line-height: 80rpx;
  background: linear-gradient(to right, #fe996f, #f6705a);
  color: white;
  box-shadow: 0px 11rpx 32rpx 0px rgba(246, 112, 90, 0.30);
}
.loginBtn.button-hover{
  opacity: 0.9;
}
.binding{
  color: #f6705a;
  font-size: 20rpx;
  margin-top: 46rpx;
}