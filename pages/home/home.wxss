view {
  box-sizing: border-box;
}

.decorativeBlock {
  position: fixed;
  height: 42rpx;
  width: 100%;
  background: linear-gradient(to bottom, #fff, rgba(0, 0, 0, 0));
  top: 0;
}

.main {
  height: calc(100vh - 98rpx);
  display: flex;
  flex-direction: column;
  padding: 0 20rpx;
}

.clockWrapper {
  height: 473rpx;
  background-color: #eef7f6;
  box-shadow: 0px -2rpx 8rpx 0px rgba(0, 0, 0, 0.10);
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.todoList {
  box-sizing: border-box;
  flex: 1;
  padding: 0 11rpx;
  height: 0;
}

.listWrapper {
  position: relative;
  padding-top: 24rpx;
  padding-bottom: 66rpx;
  min-height: 100%;
}

.decorativeLine {
  position: absolute;
  width: 2rpx;
  height: 100%;
  background-color: #f6705a;
  left: 41rpx;
  top: 0;
  bottom: 0;
  z-index: -1;
}

.todoList .item{
  background-color: #fff;
  color: #333;
  box-shadow: 0rpx -2rpx 6rpx 0rpx rgba(0, 0, 0, 0.10);
  font-size: 28rpx;
  line-height: 72rpx;
  border-radius: 7rpx;
  display: flex;
  align-items: center;
}

.todoList .item:not(:first-of-type) {
  margin-top: 24rpx;
}

.radioWrapper {
  height: 72rpx;
  display: flex;
  align-items: center;
  padding-left: 31rpx;
  padding-right: 27rpx;
}

.item .statusRadio {
  box-sizing: border-box;
  width: 23rpx;
  height: 23rpx;
  border: 2rpx solid #f6705a;
  border-radius: 50%;
  
  display: flex;
  justify-content: center;
  align-items: center;
}

.item.completed .statusRadio::after {
  content: '';
  display: block;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #f6705a;
}

.item>text {
  margin-right: 49rpx;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}

.clockWrapper>.buttonWrapper {
  margin-top: -36rpx;
}

.clockWrapper>.loginStatus {
  font-size: 20rpx;
  color: #f6705a;
  text-align: center;
  margin-top: 43rpx;
  min-height: 25rpx;
}

.clockWrapper>.tomatoWrapper {
  margin-top: 10rpx;
}
